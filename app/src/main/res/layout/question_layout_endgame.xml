<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    tools:showIn="@layout/end_game">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        >

        <TextView
            android:id="@+id/checkbox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="25sp"
            tools:text="T"
            android:background="@drawable/circle"
            android:textColor="@color/white"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/question_endGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_toStartOf="@+id/question_num"
            android:layout_toEndOf="@+id/checkbox"
            android:layout_alignTop="@+id/checkbox"
            android:textColor="@color/black"
            tools:text="Em the bigBangTheory qual o nome do personagem que diz Bazinga!"
            android:background="@drawable/card_view_bg"

            />
        <TextView
            android:id="@+id/question_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="18sp"
            android:layout_alignStart="@+id/question_endGame"
            android:layout_below="@+id/question_endGame"
            android:textColor="@color/black"
            tools:text="teste teste teste teste teste teste teste teste teste teste teste teste teste teste teste teste"
            android:background="@drawable/card_view_bg"

            />

        <TextView
            android:id="@+id/user_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:textSize="16sp"
            android:layout_alignStart="@+id/question_endGame"
            android:layout_below="@+id/question_answers"
            android:textColor="@color/black"
            tools:text="questao asdasdad"
            android:background="@drawable/card_view_bg"

            />

        <TextView
            android:id="@+id/question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:ellipsize="marquee"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/card_view_bg"
            tools:text="01/05"

            />






    </RelativeLayout>

</androidx.cardview.widget.CardView>